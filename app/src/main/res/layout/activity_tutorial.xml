<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@xml/color_gradient"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tutorial_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/appOrangeLight"
             />

        <LinearLayout
            android:id="@+id/tutorial_buttons_ll"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tutorial_skip_b"
                android:onClick="skipButtonClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@xml/round_corners_blue"
                android:textAllCaps="false"
                android:text="@string/tutorial_b_skip"
                android:textColor="@android:color/white"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabDots"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:tabBackground="@xml/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>

            <Button
                android:id="@+id/tutorial_continue_b"
                android:onClick="continueButtonClick"
                android:layout_width="wrap_content"
                android:text="@string/tutorial_b_continue"
                android:layout_height="wrap_content"
                android:background="@xml/round_corners_blue"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>